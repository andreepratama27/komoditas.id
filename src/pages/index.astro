---
import Layout from '@layouts/Layout.astro'
import Navbar from '@components/Navbar'
---

<Layout name="HomePage">
  <div class="w-full min-h-screen">
    <Navbar client:visible />

    <section class="mx-auto max-w-2xl py-4 relative top-20">
      <h1 class="text-lg font-bold">Cari harga komoditas</h1>

      <input class="w-full bg-white py-2 px-4 mt-4 rounded shadow-md" placeholder="Cari disini..." />

      <div class="pt-8 grid grid-cols-2 gap-8">
        {
          Array(4)
            .fill('')
            .map(item => (
              <div class="w-full shadow-md p-4 bg-white">
                <div class="img-wrapper flex justify-center bg-black rounded h-52">
                  <img src="https://via.placeholder.com/150" />
                </div>
                <p class="pt-4">Strawberry</p>
                <p>Rp. 3,000</p>
              </div>
            ))
        }
      </div>
    </section>
  </div>
</Layout>
